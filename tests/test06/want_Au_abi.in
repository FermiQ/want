
&CONTROL
   prefix = 'gold-o_DS2'
   postfix = '_WanT'
   work_dir = './SCRATCH/'
   restart_mode = 'from_scratch'
   verbosity = 'high'
/

&SUBSPACE
   dimwann  =  6    
   win_max  =  0.6
   froz_max = -3.4     ! Fermi = -6.21 eV
/   

&LOCALIZATION
   maxiter0_wan = 100
   maxiter1_wan = 1500
   ncg = 5       
/

WANNIER_CENTERS {crystal} 
1gauss  0.0  0.0  0.7   0  0  1.0
1gauss  0.0  0.0  0.2   2 -2  1.0
1gauss  0.0  0.0  0.2   2 -1  1.0
1gauss  0.0  0.0  0.2   2  0  1.0
1gauss  0.0  0.0  0.2   2  1  1.0
1gauss  0.0  0.0  0.2   2  2  1.0

