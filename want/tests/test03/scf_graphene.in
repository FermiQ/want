graphene sheet

   &CONTROL
      calculation = 'scf',
      restart_mode='from_scratch',
      verbosity='default',
      prefix='graphene',
      nstep=100,
      tstress = .false.,
      tprnfor = .true.,
      pseudo_dir = './',
   /
   &SYSTEM
      ibrav=4,
      celldm(1)=4.582348       ! = 1.40 * sqrt(3) Ang
      celldm(3)=8.000000,
      nat=2,
      ntyp=1,
      ecutwfc=40.0,
      ecutrho=160.0,
      occupations='smearing',
      smearing='gaussian',
      degauss=0.01,
      nspin=1,
   /
   &ELECTRONS
      electron_maxstep = 100,
      mixing_mode = 'plain',
      mixing_beta = 0.3,
      conv_thr =  1.0d-8,
   /
ATOMIC_SPECIES
  C    12.011    C.blyp-mt.UPF
ATOMIC_POSITIONS {alat}
C    0.0    0.000000      0.0
C    0.5    0.288675      0.0             ! 1/SQRT(12)
K_POINTS {automatic}
   16 16 1    1  1  0

